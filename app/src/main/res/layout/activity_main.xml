<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    android:gravity="center"
    android:weightSum="1">



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="360dp"
        android:layout_height="410px"
        android:layout_weight="0.93"
        android:background="@mipmap/ic_supotsat1" />

    <LinearLayout

        android:label="@mipmap/logo_support"
        android:layout_width="360dp"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="#FFF"
            android:onClick="OnClickLink1"
            android:text="Acesso 1"
            android:textColor="#104E8B"
            android:layout_margin="5dp"
            android:textSize="36dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="#FFF"
            android:onClick="OnClickLink2"
            android:text="Acesso 2"
            android:textColor="#FF0000"
            android:layout_margin="5dp"
            android:textSize="36dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">



        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="#FFF"
            android:onClick="OnClickContato"
            android:text="Contato"
            android:textColor="#104E8B"
            android:layout_margin="5dp"
            android:textSize="36dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="#FFF"
            android:onClick="OnClickDiscar"
            android:text="Ligar"
            android:textColor="#104E8B"
            android:layout_margin="5dp"
            android:textSize="36dp"/>




    </LinearLayout>


</LinearLayout>